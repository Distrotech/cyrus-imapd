srcdir = @srcdir@
VPATH = @srcdir@
PURIFY=/usr/local/bin/purify

CC = @CC@
INSTALL = @INSTALL@
RANLIB = @RANLIB@

DEFS = @DEFS@
CPPFLAGS = -I. -I$(srcdir) -I$(srcdir)/../lib -I$(srcdir)/../et @CPPFLAGS@ @SASLFLAGS@
LIBS = -lutil @IMAP_LIBS@ /usr/local/lib/afs/libsys.a
DEPLIBS = ../lib/libcyrus.a @DEPLIBS@

CFLAGS = @CFLAGS@
LDFLAGS = @LDFLAGS@

SHELL = /bin/sh
MAKEDEPEND = @MAKEDEPEND@

prefix = @prefix@
exec_prefix = @exec_prefix@
cyrus_prefix = @cyrus_prefix@

AFS=/usr/local

OBJS = amssync.o ams.o imap.o pioctl.o hash.o

all: amssync

install:
	$(INSTALL) -s -m 755 amssync $(DESTDIR)$(cyrus_prefix)/bin

.c.o:
	$(CC) -c $(CPPFLAGS) $(DEFS) $(CFLAGS) $<

amssync: $(OBJS) $(DEPLIBS)
	$(CC) $(LDFLAGS) -o amssync $(OBJS) $(DEPLIBS) $(LIBS)

amssync.pure: $(OBJS) $(DEPLIBS)
	$(PURIFY) $(PUREARGS) $(CC) $(LDFLAGS) -o amssync $(OBJS) $(DEPLIBS) $(LIBS)

clean:
	rm -f *.o Makefile.bak amssync makedepend.log

distclean: clean
	rm -f Makefile

depend: 
	${MAKEDEPEND} $(CPPFLAGS) $(DEFS) $(CFLAGS) *.c $(srcdir)/*.c 1>makedepend.log 2>&1

