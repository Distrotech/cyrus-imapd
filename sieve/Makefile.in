srcdir = @srcdir@
VPATH = @srcdir@

CC = @CC@
YACC = @YACC@
YFLAGS = -d
LEX = @LEX@
RANLIB = @RANLIB@

DEFS = @DEFS@
CPPFLAGS = -I. -I.. -I$(srcdir) -I$(srcdir)/../lib @CPPFLAGS@ @SASLFLAGS@
CFLAGS = @CFLAGS@
LDFLAGS = @LDFLAGS@

MAKEDEPEND = @MAKEDEPEND@

LIBS = libsieve.a
DEPLIBS=../lib/libcyrus.a @DEPLIBS@

all: libsieve.a

install:

test: test.o $(DEPLIBS) libsieve.a
	$(CC) $(LDFLAGS) -o test \
	 test.o $(LIBS) $(DEPLIBS)

OBJS=sieve.o sieve-lex.o comparator.o interp.o message.o script.o \
	tree.o md5.o addr.o addr-lex.o

sieve.c sieve.h: sieve.y
	$(YACC) $(YFLAGS) $(srcdir)/sieve.y
	mv -f y.tab.c sieve.c
	mv -f y.tab.h sieve.h

addr.c addr.h: addr.y
	$(YACC) $(YFLAGS) -p addr $(srcdir)/addr.y
	mv -f y.tab.c addr.c
	mv -f y.tab.h addr.h

addr-lex.c: addr-lex.l addr.h
	$(LEX) -t -Paddr $(srcdir)/addr-lex.l > $@

libsieve.a: sieve.c sieve.h $(OBJS)
	rm -f libsieve.a
	ar cr libsieve.a $(OBJS)
	$(RANLIB) libsieve.a

clean:
	rm -f test addr-lex.c addr.[ch] sieve.[ch] *.o *.a Makefile.bak makedepend.log

distclean: clean
	rm -f Makefile

depend:
	${MAKEDEPEND} $(CPPFLAGS) $(DEFS) -I$(srcdir) $(CFLAGS) *.c *.y $(srcdir)/*.y $(srcdir)/*.c 1>makedepend.log 2>&1

.c.o:
	$(CC) -c $(CPPFLAGS) $(DEFS) -I$(srcdir) -I. $(CFLAGS) \
	$<

